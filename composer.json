{
    "name": "fidry/console",
    "type": "library",
    "description": "Library to create CLI applications",
    "license": "MIT",
    "authors": [
        {
            "name": "ThÃ©o Fidry",
            "email": "theo.fidry@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4.0",
        "symfony/console": "^5.3 || ^6.1",
        "symfony/event-dispatcher-contracts": "^2.4",
        "symfony/service-contracts": "^v2.4.0",
        "thecodingmachine/safe": "^1.3",
        "webmozart/assert": "^1.9"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.4",
        "ergebnis/composer-normalize": "^2.13",
        "infection/infection": "^0.26",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.4.3",
        "symfony/dependency-injection": "^5.3 || ^6.1",
        "symfony/framework-bundle": "^5.3 || ^6.1",
        "symfony/http-kernel": "^5.3 || ^6.1",
        "symfony/phpunit-bridge": "^5.3 || ^6.0",
        "symfony/yaml": "^3.4.47 || ^4.4.19 || ^5.1.11 || ^5.3 || ^6.1",
        "webmozarts/strict-phpunit": "^7.0@beta"
    },
    "conflict": {
        "symfony/dependency-injection": "<5.3.0",
        "symfony/framework-bundle": "<5.3.0",
        "symfony/http-kernel": "<5.3.0"
    },
    "config": {
        "sort-packages": true,
        "bamarni-bin": {
            "bin-links": false
        },
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true,
            "bamarni/composer-bin-plugin": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Fidry\\Console\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fidry\\Console\\Tests\\": "tests"
        }
    }
}
